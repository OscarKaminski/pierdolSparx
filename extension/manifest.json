{
    "name": "pierdolSparx",
    "version": "1.0",
    "description": "A browser extension that improves Sparx Maths.",
    "manifest_version": 3,
    "author": "Oscar Kami≈Ñski",
    "host_permissions": [
        "*://www.sparxmaths.uk/*",
        "https://auth.sparxmaths.uk/*"
    ],
    "icons": {
        "128": "assets/logo.png"
    },
    "action": {
        "default_icon": {
            "128": "assets/logo.png"
        },
        "default_title": "pierdolSparx"
    },
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "content_scripts": [
        {
            "js": [
                "index.js"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://*.sparxmaths.uk/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "main.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
